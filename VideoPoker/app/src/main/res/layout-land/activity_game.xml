<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"

    android:baselineAligned="true"
    android:background="#BBBBDD">
    <!--android:orientation="vertical"-->


    <LinearLayout
        android:id="@+id/winningstable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:baselineAligned="true">
            <TableRow android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView android:id="@+id/royalflushtitle" android:text="@string/royalflushtitle"
                    android:layout_width="wrap_content" />
                <TextView android:id="@+id/royalflushreward" android:text="@string/royalflushreward"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/straightflushtitle" android:text="@string/straightflushtitle"/>
                <TextView android:id="@+id/straightflushreward" android:text="@string/straightflushreward"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/fourofakindtitle" android:text="@string/fourofakindtitle"/>
                <TextView android:id="@+id/fourofakindreward" android:text="@string/fourofakindreward"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/fullhousetitle" android:text="@string/fullhousetitle"/>
                <TextView android:id="@+id/fullhousereward" android:text="@string/fullhousereward"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/flushtitle" android:text="@string/flushtitle"/>
                <TextView android:id="@+id/flushreward" android:text="@string/flushreward"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/straighttitle" android:text="@string/straighttitle"/>
                <TextView android:id="@+id/straightreward" android:text="@string/straightreward"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/threeofakindtitle" android:text="@string/threeofakindtitle"/>
                <TextView android:id="@+id/threeofakindreward" android:text="@string/threeofakindreward"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/twopairstitle" android:text="@string/twopairstitle"/>
                <TextView android:id="@+id/twopairsreward" android:text="@string/twopairsreward"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/pairtitle" android:text="@string/pairtitle"/>
                <TextView android:id="@+id/pairreward" android:text="@string/pairreward"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            </TableLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="true">
        <TableRow>
            <TextView android:id="@+id/cashtitle" android:text="@string/cashtitle" />
            <TextView android:id="@+id/cashvalue" android:text="@string/cashvalue"
                android:layout_marginLeft="10dp"
                android:layout_gravity="end" />

        </TableRow>
    </TableLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/winmessagespace"
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:layout_below="@id/winningstable"

        >

    <TextView
        android:id="@+id/winmessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:textColor="#BB1111"
        />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:layout_below="@id/winmessagespace"
        android:layout_alignParentBottom="true"
        android:gravity="end">

        <ImageView android:id="@+id/card1" android:layout_gravity="left"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/red_back"
            android:contentDescription="Card number 1"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp" />
        <ImageView android:id="@+id/card2" android:layout_gravity="left"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/red_back"
            android:contentDescription="Card number 2"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@+id/card1"
            android:layout_margin="5dp" />
        <ImageView android:id="@+id/card3" android:layout_gravity="left"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/red_back"
            android:contentDescription="Card number 3"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@+id/card2"
            android:layout_margin="5dp" />
        <ImageView android:id="@+id/card4" android:layout_gravity="left"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/red_back"
            android:contentDescription="Card number 4"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@+id/card3"
            android:layout_margin="5dp" />
        <ImageView android:id="@+id/card5" android:layout_gravity="left"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/red_back"
            android:contentDescription="Card number 5"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@+id/card4"
            android:layout_margin="5dp" />

        <Button android:id="@+id/deal" android:text="@string/newgame"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>



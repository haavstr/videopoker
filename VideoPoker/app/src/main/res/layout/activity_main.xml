<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button android:id="@+id/deal" android:text="Deal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/hold5" android:text="@string/hold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hold4"
            android:layout_toRightOf="@+id/hold4"
            android:layout_toEndOf="@+id/hold4" />

        <Button android:id="@+id/hold4" android:text="@string/hold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hold3"
            android:layout_toRightOf="@+id/hold3"
            android:layout_toEndOf="@+id/hold3" />

        <Button android:id="@+id/hold3" android:text="@string/hold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hold2"
            android:layout_toRightOf="@+id/hold2"
            android:layout_toEndOf="@+id/hold2" />

        <Button android:id="@+id/hold1" android:text="@string/hold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/hold2" android:text="@string/hold"
            android:layout_alignTop="@+id/hold1"
            android:layout_toRightOf="@+id/hold1"
            android:layout_toEndOf="@+id/hold1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView android:id="@+id/card1" android:gravity="center_horizontal"
            android:layout_width="50dp"
            android:layout_height="73dp"
            android:src="@drawable/Red_Back"
            android:contentDescription="Card number 1"
            android:clickable="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp" />






        <ImageView android:id="@+id/card2" android:gravity="center_horizontal"
            android:text="X"
            android:layout_width="50dp"
            android:layout_height="73dp"
            android:src="@drawable/Red_Back"
            android:contentDescription="Card number 2"
            android:clickable="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/hold2"
            android:layout_alignStart="@+id/hold2"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp" />

        <ImageView android:id="@+id/card3" android:gravity="center_horizontal"
            android:layout_width="50dp"
            android:layout_height="73dp"
            android:src="@drawable/Red_Back"
            android:contentDescription="Card number 3"
            android:clickable="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/hold2"
            android:layout_toEndOf="@+id/hold2"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp" />


        <ImageView android:id="@+id/card4" android:gravity="center_horizontal"
            android:layout_column="3"
            android:layout_width="50dp"
            android:layout_height="73dp"
            android:src="@drawable/Red_Back"
            android:contentDescription="Card number 4"
            android:clickable="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/hold3"
            android:layout_toEndOf="@+id/hold3"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp" />


        <ImageView android:id="@+id/card5"
            android:layout_width="50dp"
            android:layout_height="73dp"
            android:src="@drawable/Red_Back"
            android:contentDescription="Card number 5"
            android:clickable="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/hold5"
            android:layout_alignEnd="@+id/hold5" />


    </RelativeLayout>

</LinearLayout>
